#include<stdio.h>
#include<stdlib.h>
#include<time.h>

int main()
{
    int matriz_A[3][3];
    int matriz_B[3][3];
    int suma[3][3];
    int resta[3][3];
    int multiplicacion[3][3];
    
    printf("Usuario, ingrese los elementos de la matriz A:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("Elemento %d, %d: ", i, j);
    		scanf("%d", &matriz_A[i][j]);
    	}
    }
    
    printf("Ahora ingrese los elementos de la matriz B:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("Elemento %d, %d: ", i, j);
    		scanf("%d", &matriz_B[i][j]);
    	}
    }
    
    printf("La matriz A es:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("%d", matriz_A[i][j]);
    	}
    	printf("\n");
    }
    
    printf("La matriz B es:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("%d", matriz_B[i][j]);
    	}
    	printf("\n");
    }
    
    //suma
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		suma[i][j] = matriz_A[i][j] + matriz_B[i][j];
    	}
    }
    
    printf("La suma de A + B es:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("%d", suma[i][j]);
    	}
    	printf("\n");
    }
    
    //resta
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		resta[i][j] = matriz_A[i][j] - matriz_B[i][j];
    	}
    }
    
    printf("La resta de A - B es:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("%d", resta[i][j]);
    	}
    	printf("\n");
    }
    
    //multiplicacion
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		multiplicacion[i][j] = matriz_A[i][j] * matriz_B[j][i];
    	}
    }
    
    printf("La multiplicacion de A * B es:\n");
    for(int i=1; i<=3; i++)
    {
    	for(int j=1; j<=3; j++)
    	{
    		printf("%d", multiplicacion[i][j]);
    	}
    	printf("\n");
    }
    return 0;
}