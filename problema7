#include <stdio.h>

void serie(int numero);

int main()
{
	int numero = 0;
	printf("Usuario, ingrese un numero entero positivo: ");
	scanf("%d", &numero);
	printf("serie : %d ", numero);
	serie(numero);
	
	return 0;
}

void serie(int numero)
{
	if (numero != 1)
	{
		if (numero % 2 == 0)
			numero /= 2;
		else
			numero = numero * 3 + 1;
	printf("%d ", numero);
	serie(numero);
	}
}